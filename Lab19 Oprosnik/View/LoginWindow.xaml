    </Window.Resources>
    <Window.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition Height="30" />
                <RowDefinition Height="50" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                HorizontalAlignment="Center"
                FontFamily="Edwardian Script ITC"
                FontSize="40"
                FontWeight="Bold"
                Foreground="#FF4C2305"
                IsEnabled="False"
                Text="Login" />

            <Border
                Grid.Row="1"
                Grid.ColumnSpan="2"
                Margin="2"
                Background="#FFE9EDF4"
                BorderBrush="#FF4C2305"
                BorderThickness="1"
                CornerRadius="10"
                FocusManager.FocusedElement="{Binding ElementName=TextBox1}">
                <TextBox
                    Name="TextBox1"
                    Width="auto"
                    Height="auto"
                    VerticalContentAlignment="Center"
                    Background="{x:Null}"
                    BorderThickness="0"
                    Cursor="IBeam"
                    Focusable="True"
                    FontFamily="Segoe UI Symbol"
                    FontSize="15"
                    MaxLength="40"
                    TabIndex="0"
                    Text="{Binding Email}"
                    TextBlock.TextAlignment="Center" />
            </Border>

            <Border
                Grid.Row="2"
                Grid.ColumnSpan="2"
                Margin="2"
                Background="#FFE9EDF4"
                BorderBrush="#FF4C2305"
                BorderThickness="1"
                CornerRadius="10">
                <PasswordBox
                    Name="TextBox2"
                    VerticalContentAlignment="Center"
                    psa:PasswordBoxAssistant.BindPassword="True"
                    psa:PasswordBoxAssistant.BoundPassword="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Background="{x:Null}"
                    BorderThickness="0"
                    Cursor="IBeam"
                    FocusManager.IsFocusScope="True"
                    Focusable="True"
                    FontFamily="Segoe UI Symbol"
                    FontSize="13.333"
                    MaxLength="40"
                    TextBlock.TextAlignment="Center" />
            </Border>

            <TextBlock
                Grid.Row="3"
                Margin="3"
                Cursor="Hand"
                Foreground="#FF0800FF"
                TextDecorations="Underline">
                Не зарегистрированы?
                <TextBlock.InputBindings>
                    <MouseBinding
                        Command="{Binding OpenRegisterWindowCommand}"
                        CommandParameter="{Binding Text, ElementName=TextBox1}"
                        MouseAction="LeftClick" />
                </TextBlock.InputBindings>
            </TextBlock>

            <Button
                Grid.Row="4"
                Grid.ColumnSpan="2" Grid.Column="0"
                Margin="5"
                md:ColorZoneAssist.Mode="Light"
                Command="{Binding TryLoginCommand}"
                Content="Войти!"
                Cursor="Hand" />
        </Grid>
    </Window.Content>
</Window>